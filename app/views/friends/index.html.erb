<div class="container">
<div class="friends_index">
<h1>Friends:</h1>

<%  %>
<% @friends.each do |friend| %>
<div class="friend-box" style="border: 1px solid black; m-1">
<% if friend.photo.attached? %>
  <%= cl_image_tag friend.photo.key,
        width: 150, height: 150, crop: :thumb, gravity: :face %>
<% else %>
<img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_640.png" alt="">
<% end %>
<p><%= link_to "#{friend.first_name} #{friend.last_name}", friend_path(friend) %></p>
<p>Location: <%= friend.location %> </p>
<p>Description: <%= friend.description %> </p>

 <a><%= link_to "View Details", friend_path(friend), :class => 'btn btn-success' %></a>
<%= link_to "Delete",
  friend_path(friend),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <div class="friends-list">
    <% @friends.each do |friend| %>
    <div class="friend-card">
      <img class="image-container" src="https://picsum.photos/200" alt="profile pic">

      <div class="friend-card-details">
        <div class="card-title">
          <h5><%= link_to "#{friend.first_name} #{friend.last_name}", friend_path(friend) %> </h5>
          <p><i class="fa-solid fa-location-dot"></i> <%= friend.location %></p>
        </div>
        <div class="card-details">
          <h3>Interests:</h3>
            <ul class= "flex-list">
              <% interests = friend.interest.split(", ").to_a %>
              <% interests.each do |interest|%>
              <li><%= interest %></li>
              <% end %>
            </ul>
            <div class="card-footer">
              <%= link_to "View Details",
                friend_path(friend),
                :class => 'btn btn-success' %>
              <h4><%= friend.price %> â‚¬</h4>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  </div>
</div>
