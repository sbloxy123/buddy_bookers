<div class="container" id="img-map">
<%= cl_image_tag @friend.photo.key,
        width: 450, height: 450, crop: :fill %>
<div style="width: 60%; height: 458px; border-radius: 0 0 51px 0; box-shadow: 0px 4px 4px 0px #00000040; border: 1px solid #000000;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>


<div class="container" id="main-container">

<div class="container">

<h1><%= "#{@friend.first_name} #{@friend.last_name}" %></h1>
<p id="description"><%= "#{@friend.description}" %></p>
</div>

<div class="container">
<h3>Interests</h3>
<ul class="interest-ul">
<% @friend.interest.split(",").each do |i| %>
<li class="interest-list"><%= i %></li>
<% end %>
</ul>
<div class="container" id="book-container">
<%= link_to "Book Me!", new_friend_booking_path(params[:id]), :class => 'book-button' %>
<p><%= "#{@friend.price}" %>  <i class="fa-solid fa-euro-sign"></i></p>
<p><i class="fa-solid fa-location-dot"></i>  <%= "#{@friend.location}" %></p>
</div>
</div>

</div>


<div class="container" id="back-to-friends">
<a><%= link_to "Back to Friends List", friends_path, :class => 'back-friends-button' %></a>
<%= link_to "Delete",
  friend_path(@friend),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>
